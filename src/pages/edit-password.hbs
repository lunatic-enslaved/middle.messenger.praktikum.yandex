{{#extend "settings-layout/settings-layout" pageDescription="Страница редактирования пароля авторизованного пользователя" }}
  {{#content "content"}}
    <div>
        <div>
            <h2>Изменить пароль</h2>
            <a href="./settings.hbs">Назад</a>
        </div>
        

        {{#> card/card className="auth-layout___card" }}
          <form action="">
            {{> 'input/input' type="password" label="Старый пароль" name="oldPassword" error="" }}
            {{> 'input/input' type="password" label="Новый пароль" name="newPassword" error="" }}
            {{> 'input/input' type="password" label="Повторите новый пароль" name="repeatNewPassword" error="" }}

            {{> 'button/button' text="Сохранить" type="submit" }}
          </form>
        {{/card/card}}
    </div>
  {{/content}}
{{/extend}}
